import pandas as pd
import matplotlib.pyplot as plt

# Load dataset
def load_data(path):
    return pd.read_csv(path)

# Clean dataset
def clean_data(df):
    df = df.drop_duplicates()
    df = df.dropna()
    return df

# Summary statistics
def summary_stats(df):
    return df.describe()

# Grouping example
def group_data(df, column):
    return df.groupby(column).size()

# Example run
if __name__ == '__main__':
    file_path = 'data.csv'  # Replace with your CSV
    df = load_data(file_path)
    print("Original Data:")
    print(df.head())

    df_clean = clean_data(df)
    print("\nCleaned Data:")
    print(df_clean.head())

    print("\nSummary Statistics:")
    print(summary_stats(df_clean))

